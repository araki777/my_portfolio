<div class="groups-menu-bar">
  <div class="groups-user">
    <div class="groups-user-title">
      <i class="fas fa-sync-alt fa-2x"></i>
      <div class="groups-user-name">
        <%= current_user.name %>
      </div>
    </div>
  </div>
  <ul class="groups-menu-list">
    <li>
      <%= link_to new_group_path do %>
        <%= icon('fas', 'pen-square', class: 'icon') %>
        新規グループ作成
      <% end %>
    </li>
    <li>
      <%= link_to edit_user_path(current_user) do %>
        <%= icon('fas', 'cog', class: 'icon') %>
        ユーザー設定
      <% end %>
    </li>
  </ul>

  <div class="group-title">グループ名</div>
  <div class="groups">
    <% current_user.groups.each do |group| %>
      <div class="group">
        <%= link_to group_messages_path(group) do %>
          <div class="group-name">
            <%= group.name %>
          </div>
          <div class="group-message">
            <%= group.show_last_message %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
