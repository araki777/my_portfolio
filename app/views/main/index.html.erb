<section class="content-section introduction-container" id="about">
  <div class="container text-center">
    <div class="row">
      <div class="margin-auto-x">
        <div class="content-section-heading">
          <h3 class="text-secondary mb-0 text-yellow">About</h3>
          <h2 class="mt0-mb3 text-dark">自己紹介</h2>
