        </a>
      </li>
      <li class="list-inline-item">
        <a class="social-link rounded-circle text-white">
          <i class="fab fa-github"></i>
        </a>
      </li>
    </ul>
    <p class="copy-right mb-0">Copyright @ ARAKI portfolio 2020</p>
  </div>
</footer>

<a class="page-top-button button--round-l" href="#main">
  <i class="fas fa-angle-up fa-2x"></i>
</a>

<%= javascript_tag do %>
  $(function() {
    var topBtn = $('.page-top-button');
    topBtn.hide();

    // 画面スクロール時の挙動
    $(window).scroll(function() {
      if ($(this).scrollTop() > 100) {
        topBtn.fadeIn();
      } else {
        topBtn.fadeOut();
      }
    });

    $(".menu-toggle").on('click', function() {
      $("#sidebar-wrapper").toggleClass("active");
      $(this).children(".fa-bars, .fa-times").toggleClass("fa-bars, fa-times");
    });
  });
<% end %>
