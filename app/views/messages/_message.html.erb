<div class="message">
  <div class="upper-message">
    <div class="upper-message-user-name">
      <%= message.user.name %>
    </div>
    <div class="upper-message-date">
      <%= message.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
    </div>
  </div>
  <div class="lower-message">
    <% if message.content.present? %>
      <p class="lower-message-content">
        <%= safe_join(message.content.split("\n"), tag(:br)) %>
      </p>
    <% end %>
    <%= image_tag message.image.url, class: "lower-message-image" if message.image.present? %>
  </div>
</div>
